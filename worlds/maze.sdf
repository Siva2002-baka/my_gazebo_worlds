        <visual name="mid_right"><pose>3.5 1 0.5 0 0 0</pose><geometry><box><size>0.2 5 1.5</size></box></geometry></visual>

        <visual name="center_L1_v"><pose>-1.5 0.5 0.5 0 0 0</pose><geometry><box><size>0.2 2 1.5</size></box></geometry></visual>
